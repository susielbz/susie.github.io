    login.js部分代码：
    
    
     // 登录按钮点击事件
     $("#login_button").click(function(){
        var username = $(".account-username").val();
        var password=$(".password-input").val();
        //true时候下次自动登录，false时候不需要自动登录
        var isMember = $("#rememberMe1").prop("checked")?'1':'0';
        if(username.length == 0){
            $(".m-form-error1").show();
            $(".m-error-message1").text("账号不能为空");
            return;
        }else if(password.length == 0){
            $(".m-form-error1").show();
            $(".m-error-message1").text("密码不能为空");
            return;
        }else{
            // 提交
          $.ajax({
              url : baseurl+'/aopa/manager/login',
              type : 'post',
              data : JSON.stringify({"email":username,"password":password,"rememberMe":isMember}),
              dataType: "json",
              contentType: 'application/json',
              xhrFields: {withCredentials: true},
              success : function(data) {
                  if(data.status.code == 200){
                      location.href="../../index.html"
                  }else{
                      $(".m-form-error1").show();
                      $(".m-error-message1").text("账户名或密码错误！");
                  }
              }
          });
        }
    });

  // 账户输入框聚焦事件
  $(".account-username").focus(function(){
      $(".login-error1").hide();
      $(".m-error-message1").text("");
  });
  
  // 密码输入框聚焦事件
    $(".password-input").focus(function(){
      $(".login-error1").hide();
      $(".m-error-message1").text("");
  });
  /*密码框中密码的可见与隐藏*/
  $('.passport_eye').click(function() {
      $('.icon-eye1').toggle();
      $('.icon-eye2').toggle();    
      if ($('#lpassword').attr('type') == 'password') {
          $('#lpassword').attr('type', 'text');
      } else {
          $('#lpassword').attr('type', 'password');
      }
  });
// 绑定回车
  function login(){
       if(event.keyCode == 13){
          document.getElementById("login_button").click();
       }
     }
